# SCADA Bridge Environment Configuration Template
# Copy this file to .env and modify values as needed

# MQTT Broker Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_KEEPALIVE=60
MQTT_RETRY_DELAY=5

# OPC UA Server Configuration
OPCUA_PORT=4840
OPCUA_ALLOW_ANONYMOUS=true
OPCUA_USERNAME=admin
OPCUA_PASSWORD=admin123

# Modbus TCP Server Configuration
MODBUS_PORT=502
MODBUS_HOST=0.0.0.0
MODBUS_UNIT_ID=1
# Comma-separated IP whitelist (empty = allow all)
MODBUS_IP_WHITELIST=

# DNP3 Outstation Configuration (Optional)
DNP3_ENABLED=false
DNP3_PORT=20000
DNP3_HOST=0.0.0.0

# Logging
LOG_LEVEL=INFO
