# ============================================================
# Backend / Infrastructure Environment Variables
# Copy this file to Backend/.env and fill in secrets.
# ============================================================

# ----- Orchestrator / Planner -----
CORS_ORIGINS=*
PLANNER_URL=http://localhost:8011

# ----- Twilio Alerts (required for SMS notifications) -----
TWILIO_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+10000000000
TWILIO_TO_NUMBER=+19999999999

# ----- Hugging Face / LLM integrations -----
HF_MODEL_REPO=your-hf-org/pm-model
GEMINI_API_KEY=your_gemini_api_key

# ----- MQTT Broker (shared across agents, publisher, gateway) -----
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_KEEPALIVE=60
MQTT_RETRY_DELAY=5

# ----- OPC-UA Bridge Settings -----
OPCUA_PORT=4840
OPCUA_ALLOW_ANONYMOUS=true
OPCUA_USERNAME=admin
OPCUA_PASSWORD=admin123

# ----- Modbus Bridge Settings -----
MODBUS_PORT=502
MODBUS_HOST=0.0.0.0
MODBUS_UNIT_ID=1
MODBUS_IP_WHITELIST=192.168.0.0/24

# ----- DNP3 Bridge Settings -----
DNP3_ENABLED=false
DNP3_PORT=20000
DNP3_HOST=0.0.0.0

# ----- Logging -----
LOG_LEVEL=INFO

# ----- Protocol Gateway Agent Routing -----
AGENT_SAFETY_URL=http://localhost:8004
AGENT_CYBER_URL=http://localhost:8003
AGENT_MAINT_URL=http://localhost:8001
AGENT_ENERGY_URL=http://localhost:8002


